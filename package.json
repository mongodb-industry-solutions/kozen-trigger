{
  "name": "@mongodb-solution-assurance/kozen-trigger",
  "version": "1.0.2",
  "description": "Module for the Kozen framework that provides support for self-hosted MongoDB triggers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "npm run bin:kozen:js --config=kozen.js.json",
    "dev": "npm run bin:kozen:ts --config=kozen.ts.json",
    "build": "tsc && npm run copy:txt",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:txt": "copyfiles -u 1 src/**/*.txt dist/",
    "bin:kozen:ts": "ts-node node_modules/@mongodb-solution-assurance/kozen/dist/bin/kozen.js",
    "bin:kozen:js": "npx kozen"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mongodb-industry-solutions/kozen-trigger.git"
  },
  "keywords": [
    "kozen",
    "mongodb",
    "triggers",
    "self-hosted",
    "change streams"
  ],
  "author": "MongoDB Solutions Assurance Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mongodb-industry-solutions/kozen-trigger/issues"
  },
  "homepage": "https://github.com/mongodb-industry-solutions/kozen-trigger#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@mongodb-solution-assurance/kozen": "^1.1.2",
    "mongodb": "^6.17.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.127",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.0",
    "tslint": "^6.1.3",
    "typescript": "^5.0.0"
  }
}
