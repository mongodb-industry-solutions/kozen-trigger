{
  "name": "@kozen/trigger",
  "version": "1.0.5",
  "description": "Module for the Kozen framework that provides support for self-hosted MongoDB triggers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "npm run bin:kozen:js --config=kozen.js.json",
    "dev": "npm run bin:kozen:ts --config=kozen.ts.json",
    "build": "tsc && npm run copy:txt",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:txt": "copyfiles -u 1 src/**/*.txt dist/",
    "bin:kozen:ts": "ts-node node_modules/@kozen/engine/dist/bin/kozen.js",
    "bin:kozen:js": "npx kozen"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mongodb-industry-solutions/kozen-trigger.git"
  },
  "keywords": [
    "kozen",
    "mongodb",
    "triggers",
    "events",
    "self-hosted",
    "change streams"
  ],
  "author": "MongoDB Solutions Assurance Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mongodb-industry-solutions/kozen-trigger/issues"
  },
  "homepage": "https://github.com/mongodb-industry-solutions/kozen-iam-rectification/wiki",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@kozen/engine": "^1.1.13",
    "mongodb": "^6.17.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.127",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.0",
    "tslint": "^5.8.0",
    "typescript": "^5.0.0"
  }
}
